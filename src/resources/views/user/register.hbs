<div class="mt-4">
	<h3>Đăng ký tài khoản người dùng</h3>
	<form method="post" action="/auth/register">
		<div class="mb-3">
			<label for="name" class="form-label">Tên người dùng*</label>
			<input type="text" class="form-control" id="name" name="name" autofocus>
		</div>

		<div class="mb-3">
			<label for="phoneNumber" class="form-label">Số điện thoại*</label>
			<input type="number" class="form-control" id="phoneNumber" name="phoneNumber">
		</div>

		<div class="mb-3">
			<label for="email" class="form-label">Email*</label>
			<input type="email" class="form-control" id="email" name="email">
		</div>

		<div class="mb-3">
			<label for="password" class="form-label">Password*</label>
			<input type="password" class="form-control" id="password" name="password" minlength="6" maxlength="20">
		</div>

		<div class="mb-3">
			<label for="role" class="form-label">Role* (1: Người dùng, 2: Nhân viên, 3: Quản trị viên)</label>
			<input type="number" class="form-control" value="1" id="role" name="role" min="1" max="3">
		</div>
		
		<button type="submit" class="btn btn-primary">Thêm người dùng</button>
	</form>
</div>